@{
    ViewBag.Title = "Главная страница";
    
}


<!DOCTYPE html>
<html>
<head>
    <title>METANIT.COM</title>
    <meta charset="utf-8" />
</head>
<body>
    @model IEnumerable<Pets>

    <h2>Pets</h2>
    <table class="table">
        <tr><td>Name</td><td>Age</td><td>Breed</td></tr>
        @foreach (var p in Model)
        {
            <tr><td>@p.Name</td><td>@p.Age</td><td>@p.Breed</td></tr>
        }
    </table>
</body>
</html>

@section Footer {
       Copyright© AcademyTop, @DateTime.Now.Year. All rights reserved
}